{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipLibCheck": true,
  },
  "include": [
    ".eslintrc.js",
    "**/*.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.tsx",
  ],
}